<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.startup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_40x40"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Terms"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
        <activity
            android:name=".Workshops"
            android:label="@string/Workshops" />
        <activity
            android:name=".LoginForm"
            android:noHistory="true"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <service android:name=".Service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".SpeakersInformation"
            android:label="@string/Speakers"
            android:parentActivityName=".Speakers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Schedule"
            android:label="@string/Schedule"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Speakers"
            android:label="@string/Speakers"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="Speakers" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="@string/Information"
            android:parentActivityName=".Main2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>