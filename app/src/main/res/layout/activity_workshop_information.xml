<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkshopInformation">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        android:layout_margin="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/workshopDetailImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                card_view:civ_border_color="@color/colorPrimary"
                card_view:civ_border_width="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/afterbuttonclick"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center"/>
                    <Button
                        android:id="@+id/WorkshopButton"
                        android:freezesText="true"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonsignin"
                        android:drawableStart="@drawable/ic_vectornologostartup"
                        android:drawableLeft="@drawable/ic_vectornologostartup"
                        android:fontFamily="@font/colibri_light"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Sign In"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|bottom"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/currentlyEnrolledDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="20"
                            android:gravity="bottom" />
                        <TextView
                            android:id="@+id/capacityOfWorkshopDetailTextView"
                            android:text="30"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/facilitatorDetailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/colibri_light"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Teacher Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/dateDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/colibri_light"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Date"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/room"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/colibri_light"
                        android:gravity="center"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp" />

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:background="@color/colorAccent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"/>

                <TextView
                    android:id="@+id/workshopDetailTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/colibri_light"
                    android:text="Bio"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/descriptionWorkshopsDetailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/colibri_light"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"
                    android:paddingRight="25dp"
                    android:scrollbars="vertical"
                    android:text="Description here..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>